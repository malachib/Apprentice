{
    "version": "1.0.0-*",
    "dependencies": {
        "Castle.Core": "3.3.3",
        "Castle.Windsor": "3.3.0",
        "System.Threading": "4.0.10-beta-22605",
        "System.Collections": "4.0.10-beta-22605",
        "System.Linq.Expressions": "4.0.0-beta-22605",
        "System.Reflection": "4.0.10-beta-22605",
        "System.Reflection.TypeExtensions": "4.0.0-beta-22605",
        "System.Reflection.Extensions": "4.0.0-beta-22605"
    },

    // TinyIoC not yet compatible with NETCORE, and we aren't targeting MONODROID via vNext
    // just yet, so don't compile TinyIoC yet
    "exclude": [ "TinyIoC*.cs" ],

    "configurations": {
        "DEBUG": { "compilationOptions": { "define": [ "VNEXT" ] } }
    },
    "frameworks": {
        "dnx451": {
            "compilationOptions": { "define": [ "NET45", "NET40" ] },
            "frameworkAssemblies": {
                "System.Configuration": "4.0.0.0",
                "System.Net": "4.0.0.0"
            }
        },
        "net35": {
            "frameworkAssemblies": {
                "System.Configuration": "",
                "System.IO": "4.0.0.0"
            }
        },
        "net40": {
            "compilationOptions": { "define": [ "NET40" ] },
            "dependencies": {
            },
            "frameworkAssemblies": {
                "System.Configuration": "4.0.0.0",
                "System.IO": "4.0.0.0"
            }
        },
        "net45": {
            "compilationOptions": { "define": [ "NET45", "NET40" ] },
            "dependencies": {
            },
            "frameworkAssemblies": {
                "System.Configuration": "4.0.0.0",
                "System.IO": "4.0.0.0"
            }
        },
        "aspnet50": {
            "compilationOptions": { "define": [ "NET45", "NET40" ] },
            "dependencies": {
            },
            "frameworkAssemblies": {
                "System.Configuration": "4.0.0.0",
                "System.IO": "4.0.0.0"
            }
        },
        "aspnetcore50": {
            "compilationOptions": {
                /*
                 * PORTABLE is for TinyIoC.cs itself
                 */
                "define": [
                    "NET45",
                    "NET40",
                    "TINYIOC",
                    "NETCORE",

                    "PORTABLE"
                ]
            },
            "dependencies": {
                "System.Runtime": "4.0.20-beta-22605",
                "System.IO": "4.0.10-beta-22605",
                "Microsoft.Framework.DependencyInjection": "1.0.0-beta3",
                "System.Linq": "4.0.0-beta-22605"
            }
        }
    }
}
